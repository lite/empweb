-export([get/2]).


-type id()      :: integer().
-type text()   :: binary().

-record(user, {
    id          :: id(), 
    name        :: text(),
    description :: text(), 
    nick        :: text(),
    pass        :: text(),
    phash       :: text(),
    email       :: text(),
    phone       :: text(),
    fname       :: text(),
    sname       :: text(),
    birthday    :: {{},{}},  %% date
    city        :: text(),
    married     :: integer(),
    emotion_id  :: integer(),
    money       :: float(),
    online      :: true | false ,
    country_id  %% int
}).


get(Con, {id, Id})->
    dao:equery(Con, "select * from user where id = $1", [Id]);

get(Con, {name, Name})->
    dao:equery(Con, "select * from user where name = $1", [Name]);

get(Con, {nick, Nick})->
    dao:equery(Con, "select * from user where nick = $1", [Nick]).


